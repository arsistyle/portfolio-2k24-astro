---
import ProductsAll from "@/components/sections/ProductsAll.astro"
import { getLangFromUrl, useTranslatedPath, useTranslations } from "@/i18n/utils"
import PageLayout from "@/layouts/PageLayout.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)

const breadcrumbs = [
	{
		name: t("nav.home"),
		type: "link",
		url: translatePath("/"),
	},
	{
		type: "separator",
	},
	{
		name: t("nav.shop"),
		type: "current",
	},
]
---

<PageLayout title="Israel Larrondo | Shop" pageTitle={t("shop.title")} {breadcrumbs}>
	<ProductsAll />
</PageLayout>
