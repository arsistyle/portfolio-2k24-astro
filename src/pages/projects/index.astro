---
import { SectionAllProjects } from "@/components/sections/index.astro"
import { getLangFromUrl, useTranslatedPath, useTranslations } from "@/i18n/utils"
import PageLayout from "@/layouts/PageLayout.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)

const breadcrumbs = [
	{
		name: t("nav.home"),
		type: "link",
		url: translatePath("/"),
	},
	{
		type: "separator",
	},
	{
		name: t("nav.projects"),
		type: "current",
	},
]
---

<PageLayout title="Israel Larrondo | Projects" pageTitle={t("projects.title")} {breadcrumbs}>
	<SectionAllProjects />
</PageLayout>
