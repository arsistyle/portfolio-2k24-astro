---
import './styles.css';

interface TypographyProps {
  type?: keyof typeof TAGS;
  class? : string
}

const { type = 'p', class: className = '' } = Astro.props as TypographyProps;

const TAGS = {
  h1: 'h1',
  h2: 'h2',
  h3: 'h3',
  h4: 'h4',
  h5: 'h5',
  h6: 'h6',
  p: 'p',
} as const;

const Tag = TAGS[type];
---

<Tag class={`${type || ''} ${className}`}>
  <slot />
</Tag>;
