---
import { twMerge } from "tailwind-merge"

import "./styles.css"

interface TypographyProps {
	type?: keyof typeof TAGS
	class?: string
}

const { type = "p", class: className = "", ...props } = Astro.props as TypographyProps

const TAGS = {
	h1: "h1",
	h2: "h2",
	h3: "h3",
	h4: "h4",
	h5: "h5",
	h6: "h6",
	p: "p",
	a: "a",
	span: "span",
	li: "li",
} as const

const Tag = TAGS[type] || "p"
---

<Tag class={twMerge(type, className)} {...props}>
	<slot />
</Tag>
