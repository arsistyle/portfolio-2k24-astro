---
import './styles.css';

interface Props {
  tag?: 'button' | 'a' | 'span';
  variant?: 'filled' | 'outlined';
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  color?: 'primary' | 'secondary' | 'dark' | 'light';
  class?: string;
  disabled?: boolean;
  href?: string;
  type?: 'button' | 'submit' | 'reset' | undefined | null;
}

const {
  tag = 'button',
  variant,
  size = 'md',
  disabled = false,
  color,
  class: className,
  href,
  type,
} = Astro.props;
const Tag = tag;
---

<Tag
  class:list={[
    'btn',
    variant && `btn--${variant}`,
    size && `btn--${size}`,
    color && `btn--${color}`,
    disabled && 'btn--disabled',
    className,
  ]}
  type={type}
  disabled={disabled}
  href={!disabled ? href: undefined}
>
  <slot />
</Tag>
