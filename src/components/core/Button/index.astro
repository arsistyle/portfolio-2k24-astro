---
import { twMerge } from "tailwind-merge"
import "./styles.css"
import type { ButtonProps } from "./types"

type Props = ButtonProps

const {
	tag = "button",
	variant,
	size = "md",
	disabled = false,
	color,
	class: className,
	href,
	type,
	target,
	rel,
	shape = "rounded",
	title = "",
} = Astro.props
const Tag = tag
---

<Tag
	class:list={twMerge(
		"btn",
		variant && `btn--${variant}`,
		size && `btn--${size}`,
		color && `btn--${color}`,
		disabled && "btn--disabled",
		shape && `btn--${shape}`,
		className
	)}
	type={type}
	disabled={disabled}
	href={!disabled ? href : undefined}
	target={target}
	rel={rel}
	title={title}
>
	<slot name="startIcon" />
	<slot />
	<slot name="endIcon" />
</Tag>
