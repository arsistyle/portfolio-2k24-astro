---
import { DATA_EXPERIENCE } from '../../data';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { Check } from '../icons/index.astro';
import { Typography } from '../index.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { jobs }: { jobs: string[] } = DATA_EXPERIENCE[lang] || [];
---

<section
  class='flex items-center justify-center px-5 py-14 md:py-40 bg-white dark:bg-dark relative z-10'
>
  <div class='container'>
    <Typography
      type='h3'
      class='h2 dark:text-white max-w-3xl leading-tight text-balance mb-12 md:mb-20'
    >
      {t('home.experience.title')}
    </Typography>
    <div class='grid grid-cols-2 gap-8 md:gap-12 md:gap-20'>
      {
        jobs.map((text: string) => (
          <div class='col-span-2 grid gap-4 grid-cols-[2rem_1fr] md:grid-cols-[3rem_1fr] md:col-span-1 text-left'>
            <div class='w-8 md:w-12 h-8 md:h-12 text-primary-500 dark:text-primary-300'>
              <Check />
            </div>
            <p class='p highlight text-dark dark:text-white text-pretty'>{text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
